      <at node="/dev/ttyACM2" type="VOLUME" cmd="at+clvl="/>
      <at node="/dev/ttyACM2" type="IN_CALL" cmd="at%iapvc="/>

      <device name="headphone">
        <path name="on">
          <ctl name="Headphone Jack Switch" val="1"/>
        </path>
        <path name="off">
          <ctl name="Headphone Jack Switch" val="0"/>
