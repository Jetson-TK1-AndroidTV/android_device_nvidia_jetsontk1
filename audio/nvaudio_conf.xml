  <alsa_device name="voice-call"
               card_id="-1"
               card_name="tegrart5639"
               device_id="3">
    <pcm_config rate="16000"
            channels="2"
            bps="16"
            period_size="1024"
            period_count="4"
            start_threshold="4095"
