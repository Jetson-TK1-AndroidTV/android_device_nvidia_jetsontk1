      <device name="builtin-mic">
        <path name="on">
          <ctl name="Stereo ADC L2 Mux" val="DMIC1"/>
          <ctl name="Stereo ADC R2 Mux" val="DMIC1"/>
          <ctl name="Stereo ADC MIXL ADC1 Switch" val="0"/>
